@section styles
{
    <style>
        h2{
            background-color:lightblue;
        }
    </style>
}

<h1>HOME</h1>
<h2 id="mensajevista">Mensaje en vista</h2>
<button class="btn btn-danger" id="botonvista">Pulsar en View</button>

@section script
{
    <script>
        $(document).ready(function()
        {
            $("#botonvista").click(function()
            {
                $("#mensajevista").text("Boton pulsado en view");
            })
        })
    </script>
}
