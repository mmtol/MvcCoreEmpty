@model List<Empleado>

<h1>Buscador emplados Linq</h1>

<form method="post">
    <label>Oficio:</label>
    <input type="text" name="oficio"/>
    <label>Salario:</label>
    <input type="text" name="salario"/>
    <button>Buscar</button>
</form>

@if (Model != null)
{
    <table class="table table-warning">
        <thead>
            <tr>
                <th>Apellido</th>
                <th>Oficio</th>
                <th>Salario</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Empleado emp in Model)
            {
                <tr>
                    <td>@emp.Apellido</td>
                    <td>@emp.Oficio</td>
                    <td>@emp.Salario</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>@ViewData["Mensaje"]</h2>
}