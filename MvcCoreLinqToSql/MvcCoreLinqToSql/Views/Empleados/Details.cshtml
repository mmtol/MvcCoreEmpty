@model Empleado

<h1>Detalles del empleado</h1>
<div>
    <h4>Empleado</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Apellido
        </dt>
        <dd class="col-sm-10">
            @Model.Apellido
        </dd>
        <dt class="col-sm-2">
            Oficio
        </dt>
        <dd class="col-sm-10">
            @Model.Oficio
        </dd>
        <dt class="col-sm-2">
            Salario
        </dt>
        <dd class="col-sm-10">
            @Model.Salario
        </dd>
    </dl>
</div>

    <a asp-controller="Empleados" asp-action="Index">Volver a la lista</a>
