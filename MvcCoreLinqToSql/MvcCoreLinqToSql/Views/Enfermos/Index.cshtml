@model List<Enfermo>

<h1>Enfermos</h1>

@if (Model != null)
{
    <table>
        <thead>
            <tr>
                <th>Inscripcion</th>
                <th>Apellido</th>
                <th>Direccion</th>
                <th>Fecha nacimiento</th>
                <th>Sexo</th>
                <th>NSS</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Enfermo enfermo in Model)
            {
                <tr>
                    <td>@enfermo.Inscripcion</td>
                    <td>@enfermo.Apellido</td>
                    <td>@enfermo.Direccion</td>
                    <td>@enfermo.FechaNac</td>
                    <td>@enfermo.Sexo</td>
                    <td>@enfermo.Nss</td>
                    <td><button><a asp-controller="Enfermos" asp-action="Details" asp-route-inscripcion="@enfermo.Inscripcion">Details</a></button></td>
                    <td><button><a asp-controller="Enfermos" asp-action="Delete" asp-route-inscripcion="@enfermo.Inscripcion">Delete</a></button></td>

                </tr>
            }
        </tbody>
    </table>
}
